APP_NAME=fragfolio
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8002

APP_LOCALE=ja
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ja_JP

LOG_CHANNEL=stderr
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=fragfolio
DB_USERNAME=fragfolio
DB_PASSWORD=password

SESSION_DRIVER=database
SESSION_LIFETIME=120

QUEUE_CONNECTION=database
CACHE_STORE=database

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_FROM_ADDRESS="noreply@fragfolio.local"
MAIL_FROM_NAME="${APP_NAME}"

# Frontend URL for redirects
FRONTEND_URL=http://localhost:3002

# OpenAI API Configuration
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# Anthropic API Configuration
ANTHROPIC_API_KEY=

# Google Vertex AI Configuration (Service Account)
GEMINI_PROJECT_ID=your_google_cloud_project_id
GEMINI_LOCATION=asia-northeast1
GEMINI_SERVICE_ACCOUNT_PATH=/path/to/service-account-key.json

# Cloudflare Turnstile Configuration
TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# AI Configuration
# Available providers: openai, anthropic, gemini
DEFAULT_AI_PROVIDER=gemini

# OpenAI Models (available options):
# - gpt-4o-mini (cheapest, good performance)
# - gpt-4o (balanced cost/performance)
# - gpt-4 (highest quality, most expensive)
# - gpt-3.5-turbo (legacy, low cost)
AI_MODEL_GPT=gpt-4o-mini

# Anthropic Models (available options):
# - claude-3-5-haiku-20241022 (cheapest, fast responses, latest)
# - claude-3-haiku-20240307 (legacy haiku model)
# - claude-3-sonnet-20240229 (balanced cost/performance)
# - claude-3-5-sonnet-20240620 (highest quality, most expensive)
AI_MODEL_CLAUDE=claude-3-5-haiku-20241022

# Google Gemini Models (available options):
# - gemini-1.5-flash (fast responses, good performance)
# - gemini-1.5-pro (balanced cost/performance)
# - gemini-2.0-flash-exp (experimental, latest features)
# - gemini-2.5-flash (latest 2.5 series, fast responses)
# - gemini-2.5-pro (latest 2.5 series, highest quality)
AI_MODEL_GEMINI=gemini-2.5-flash

# WebAuthn Configuration
WEBAUTHN_NAME="FragFolio"
WEBAUTHN_ID="localhost"
WEBAUTHN_ORIGINS="http://localhost:3002"
